<%- model_class = Support -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:issue_type_id) %>:</strong></dt>
  <dd><%= @support.issue_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @support.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:client_id) %>:</strong></dt>
  <dd><%= @support.client_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:technician_id) %>:</strong></dt>
  <dd><%= @support.technician_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:support) %>:</strong></dt>
  <dd><%= @support.support %></dd>
  <dt><strong><%= model_class.human_attribute_name(:issue) %>:</strong></dt>
  <dd><%= @support.issue %></dd>
  <dt><strong><%= model_class.human_attribute_name(:solution) %>:</strong></dt>
  <dd><%= @support.solution %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              supports_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_support_path(@support), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              support_path(@support),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
