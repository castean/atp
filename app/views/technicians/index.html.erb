<%- model_class = Technician -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:phone) %></th>
      <th><%= model_class.human_attribute_name(:nextel) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @technicians.each do |technician| %>
      <tr>
        <td><%= link_to technician.id, technician_path(technician) %></td>
        <td><%= technician.name %></td>
        <td><%= technician.email %></td>
        <td><%= technician.phone %></td>
        <td><%= technician.nextel %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_technician_path(technician), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      technician_path(technician),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_technician_path,
            :class => 'btn btn-primary' %>
